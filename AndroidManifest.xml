<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.therandomist.photo_tagger"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10"/>
    <application android:label="@string/app_name">
        <activity android:name=".HomeActivity"
                  android:label="@string/app_name"
                  android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ManageCategoriesAndTagsActivity"
                android:label="Manage Categories and Tags"
                android:screenOrientation="portrait"/>

        <activity
                android:name=".ManageCategoriesActivity"
                android:label="Manage Categories"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ManageTagsActivity"
                android:label="Manage Tags"
                android:screenOrientation="portrait"/>

    </application>
</manifest> 
